<div class="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="log-in panel">
          <div class="panel-heading">
            <h2>アカウント作成</h2>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="panel-body">
            <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'メールアドレス', input_html: { class: 'input-lg' } %>
            <%= f.input :user_name, required: true, label: false, placeholder: 'ユーザーネーム', input_html: { class: 'input-lg' } %>
            <%= f.input :password, required: true, label: false, placeholder: 'パスワード', input_html: { class: 'input-lg' } %>
            <%= f.input :password_confirmation, required: true, label: false, placeholder: 'パスワード確認', input_html: { class: 'input-lg' } %>
            <%= f.button :submit, "登録", class: 'btn-lg btn-info btn-block' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
