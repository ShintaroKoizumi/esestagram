<div class="pics-wrapper">
  <div class="pic">
    <div class="pic-body">
      <div class="image-wrap">
        <%= simple_form_for @user, url: { action: "update" }, html: { multipart: true } do |f| %>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group text-center">
                <h4>プロフィール画像編集:</h4>
                <div class="img-circle avatar-image">
                  <%= profile_avatar_select(@user) %>
                </div>
                <%= f.file_field :avatar, label: false, input_html: { onChange: 'loadFile(event)' } %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group text-center">
                <h4>コメント編集</h4>
                <%= f.input :bio, label: false, input_html: { rows: 4 } %>
              </div>
            </div>
          </div>
          <div class="form-group text-center">
            <%= f.button :submit, '変更', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
